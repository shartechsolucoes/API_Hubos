generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String      @id @default(uuid())
  name         String
  address      String?     @db.VarChar(150)
  neighborhood String?     @db.VarChar(50)
  city         String?     @db.VarChar(50)
  state        String?     @db.VarChar(3)
  login        String      @unique
  password     String
  access_level Int
  expiration   Int
  picture      String?
  email        String
  phone        String?     @db.VarChar(15)
  status       Boolean?
  OrdersLog    OrdersLog[]
}

model Material {
  id          Int           @id @default(autoincrement())
  description String
  group       String?
  unit        String?
  active      Boolean       @default(true)
  KitMaterial KitMaterial[]
}

model KitMaterial {
  id          Int      @id @default(autoincrement())
  material    Material @relation(fields: [material_id], references: [id])
  material_id Int
  kit         Kit      @relation(fields: [kit_id], references: [id])
  kit_id      Int
  quantity    String
}

model Kit {
  id          Int           @id @default(autoincrement())
  description String
  active      Boolean       @default(true)
  materials   KitMaterial[]
  OrdersKits  OrdersKits[]
}

model Tag {
  id            Int    @id @default(autoincrement())
  referenceCode String
}

model OrdersKits {
  id       Int     @id @default(autoincrement())
  order_id Int?
  kit_id   Int
  quantity String?
  order    Order?  @relation(fields: [order_id], references: [id])
  kit      Kit     @relation(fields: [kit_id], references: [id])
}

model Order {
  id             Int          @id @default(autoincrement())
  address        String       @db.VarChar(150)
  userId         String       @default("")
  neighborhood   String       @db.VarChar(50)
  city           String       @db.VarChar(50)
  state          String       @db.VarChar(3)
  status         Int          @default(0)
  observations   String?      @default("")
  lat            String
  long           String
  qr_code        Int
  protocolNumber String       @default("")
  active         Boolean      @default(true)
  registerDay    DateTime     @default(now())
  duplicated     Boolean      @default(false)
  ordersKits     OrdersKits[]
  OrdersLog      OrdersLog[]
}

model OrdersLog {
  id          Int      @id @default(autoincrement())
  order_id    Int
  userId      String
  registerDay DateTime @default(now())
  status      Int      @default(0)
  order       Order?   @relation(fields: [order_id], references: [id])
  user        User?    @relation(fields: [userId], references: [id])
}
